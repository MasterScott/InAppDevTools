<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="es.rafaco.inappdevtools.library">

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application>

        <provider
            android:name=".IadtController"
            android:authorities="${applicationId}.iadt.controller"
            android:exported="false"/>

        <provider
            android:name=".storage.files.IadtFileProvider"
            android:authorities="${applicationId}.iadt.files"
            android:grantUriPermissions="true"
            android:exported="false">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/iadt_files_paths" />
        </provider>

        <service android:name=".logic.log.LogcatReaderService"
            android:exported="false"/>

        <service android:name=".view.overlay.OverlayUIService"
            android:exported="false"/>

        <service
            android:name=".view.notifications.NotificationUIService"
            android:exported="false" />


        <activity
            android:name=".view.activities.PermissionActivity"
            android:theme="@style/LibTheme.Dialog" />

        <activity android:name=".view.activities.WelcomeDialogActivity"
            android:theme="@style/LibTheme.Translucent"/>

        <activity android:name=".view.activities.CrashDialogActivity"
            android:theme="@style/LibTheme.Translucent"/>

        <activity android:name=".view.activities.ReportDialogActivity"
            android:theme="@style/LibTheme.Translucent"/>

    </application>

</manifest>