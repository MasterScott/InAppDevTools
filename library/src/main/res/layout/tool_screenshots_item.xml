<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <es.rafaco.compat.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:elevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="@dimen/card_cover_height"
                android:layout_height="@dimen/card_cover_height"
                android:layout_alignParentLeft="true"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/thumbnail"
                android:layout_alignParentTop="true"
                android:paddingLeft="@dimen/card_title_padding"
                android:paddingRight="@dimen/card_title_padding"
                android:paddingTop="@dimen/card_title_padding"
                android:textColor="@color/rally_white"
                android:textSize="@dimen/card_title" />

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/thumbnail"
                android:layout_below="@id/title"
                android:paddingTop="@dimen/card_count_padding_bottom"
                android:paddingLeft="@dimen/card_title_padding"
                android:paddingRight="@dimen/card_title_padding"
                android:textSize="@dimen/card_subtitle" />



            <ImageView
                android:id="@+id/overflow"
                android:layout_width="@dimen/card_overflow_width"
                android:layout_height="@dimen/card_overflow_height"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/title"
                android:layout_marginTop="@dimen/card_overflow_margin_top"
                android:layout_marginBottom="@dimen/card_overflow_margin_top"
                android:scaleType="centerCrop"
                android:clickable="true"
                android:src="@drawable/ic_more_vert_white_24dp" />


        </RelativeLayout>

    </es.rafaco.compat.CardView>

</LinearLayout>