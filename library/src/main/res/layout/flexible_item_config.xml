<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    style="@style/content_margin">

    <View
        style="@style/horizontal_separator"/>


    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <Switch
            android:id="@+id/switch_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/edit_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

        <es.rafaco.compat.AppCompatTextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/switch_button"
            android:layout_marginTop="6dp"
            android:textColor="@color/rally_white"
            style="@style/TextCondensedBig"/>

        <es.rafaco.compat.AppCompatTextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/switch_button"
            android:layout_below="@id/title"
            style="@style/TextCondensedSmall"/>

        <es.rafaco.compat.AppCompatTextView
            android:id="@+id/text_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/subtitle"
            android:layout_toLeftOf="@id/edit_button"
            android:textAlignment="textEnd"
            android:gravity="end"
            android:textStyle="bold"
            style="@style/TextCondensedMedium"/>

    </RelativeLayout>

</LinearLayout>

