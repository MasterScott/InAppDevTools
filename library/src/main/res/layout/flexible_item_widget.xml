<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_content"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="horizontal">

    <es.rafaco.compat.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        style="@style/IadtCard.Medium">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextCondensedMedium"
                android:textColor="@color/iadt_text_header"
                tools:text="Title"/>

            <TextView
                android:id="@+id/main_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_marginTop="-3dp"
                android:lineSpacingMultiplier="0.9"
                style="@style/TextCondensedExtraBig"
                android:textColor="@color/iadt_text_high"
                tools:text="Main Content"/>

            <TextView
                android:id="@+id/second_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_marginTop="-3dp"
                android:lineSpacingMultiplier="0.9"
                style="@style/TextCondensedMedium"
                android:textColor="@color/iadt_text_low"
                tools:text="Secondary Content"/>

            <FrameLayout
                android:id="@+id/chart_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

        </LinearLayout>
    </es.rafaco.compat.CardView>
</LinearLayout>