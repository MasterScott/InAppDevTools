<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <corners android:radius="1dp"
                android:topLeftRadius="15dp" android:topRightRadius="15dp"
                android:bottomRightRadius="0dp" android:bottomLeftRadius="0dp"/>

            <stroke android:width="1dp"
                android:color="@color/text_third"/>

            <solid android:color="@color/material_surface_bar"/>
        </shape>
    </item>

    <!-- Same shape but 1dp lower, to remove bottom stroke -->
    <item
        android:left="1dp"
        android:right="1dp"
        android:top="1dp"
        android:bottom="-1dp">
        <shape android:shape="rectangle" >
            <corners android:radius="1dp"
                android:topLeftRadius="15dp" android:topRightRadius="15dp"
                android:bottomRightRadius="0dp" android:bottomLeftRadius="0dp"/>
            <stroke
                android:width="0dp"/>

            <solid android:color="@color/material_surface_bar"/>
        </shape>
    </item>
</layer-list>