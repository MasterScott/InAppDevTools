<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <corners android:radius="0dp"
                android:topLeftRadius="@dimen/iadt_shape_radius"
                android:topRightRadius="@dimen/iadt_shape_radius"
                android:bottomRightRadius="0dp"
                android:bottomLeftRadius="0dp"/>

            <stroke android:width="@dimen/iadt_shape_stroke"
                android:color="@color/iadt_shape_stroke"/>

            <solid android:color="@color/iadt_toolbar"/>
        </shape>
    </item>

    <!-- Same shape but 1dp lower, to remove bottom stroke-->
    <item
        android:left="@dimen/iadt_shape_stroke"
        android:right="@dimen/iadt_shape_stroke"
        android:top="@dimen/iadt_shape_stroke"
        android:bottom="@dimen/iadt_shape_stroke_negative">
        <shape android:shape="rectangle" >
            <corners android:radius="0dp"
                android:topLeftRadius="@dimen/iadt_shape_radius"
                android:topRightRadius="@dimen/iadt_shape_radius"
                android:bottomRightRadius="0dp"
                android:bottomLeftRadius="0dp"/>
            <stroke
                android:width="0dp"/>

            <solid android:color="@color/iadt_toolbar"/>
        </shape>
    </item>
</layer-list>