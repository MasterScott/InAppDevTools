    <style name="content_margin">
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="content_margin_horizontal">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="content_padding">
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="elevated">
        <item name="android:elevation" tools:targetApi="21">4dp</item>
    </style>

    <style name="vertical_separator">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/text_secondary</item>
    </style>

    <style name="horizontal_separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/text_secondary</item>
    </style>

    <style name="horizontal_separator_log">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/rally_white</item>
        <item name="android:alpha">0.1</item>
    </style>


    <style name="TextCondensedSmall">
        <item name="android:typeface">sans</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-condensed</item>
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">@color/rally_white</item>
    </style>

    <style name="TextCondensedMedium" parent="TextCondensedSmall">
        <item name="android:textSize">15dp</item>
    </style>

    <style name="TextCondensedBig" parent="TextCondensedSmall">
        <item name="android:textSize">17dp</item>
    </style>

    <style name="TextCondensedExtraBig" parent="TextCondensedSmall">
        <item name="android:textSize">21dp</item>
    </style>

    <style name="TextMonospaceSmall">
        <item name="android:typeface">monospace</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">serif-monospace</item>
        <item name="android:textSize">8dp</item>
        <item name="android:textColor">@color/rally_white</item>
    </style>

    <style name="TextMonospaceMedium" parent="TextMonospaceSmall">
        <item name="android:textSize">10dp</item>
    </style>

    <style name="TextMonospaceBig" parent="TextMonospaceSmall">
        <item name="android:textSize">12dp</item>
    </style>

    <!-- Fixing an AndroidX bug -->
    <style name="Widget.Support.CoordinatorLayout" parent="android:Widget">
        <item name="statusBarBackground">@null</item>
    </style>

    <style name="ToggleButton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:background">@drawable/toggle_background</item>
        <item name="android:button">@null</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">center</item>
        <item name="android:paddingRight">8dp</item>
    </style>


    <style name="LibTheme.FloatingLabel" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/rally_white</item>
        <item name="android:textSize">@dimen/card_title</item>
    </style>

    <!--Campo de texto-->
    <style name="EditText" parent="LibTheme">
        <!-- cursor y línea normal-->
        <item name="colorControlNormal">@color/rally_blue_med</item>
        <!-- cursor y línea con foco-->
        <item name="colorControlActivated">@color/rally_blue</item>
    </style>

</resources>