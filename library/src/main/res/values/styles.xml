<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="LibTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorPrimary">@color/iadt_surface_bottom</item>
        <item name="colorPrimaryDark">@color/iadt_surface_top</item>
        <item name="colorAccent">@color/iadt_accent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:textColor">@color/rally_white</item>
        <item name="android:typeface">sans</item>
        <item name="android:fontFamily" tools:targetApi="16">sans-serif-condensed</item>

        <item name="android:popupTheme" tools:targetApi="lollipop">@style/LibPopupMenuStyle</item>
    </style>

    <style name="LibTheme.Translucent" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="LibTheme.Dialog">
        <item name="android:textStyle">bold</item>
        <!--<item name="android:background">@drawable/shape_layer_screen_middle</item>-->
        <!--<item name="android:background">@color/rally_blue_dark</item>-->
    </style>

    <style name="AlertDialogCustom" parent="@android:style/Theme.Dialog">
        <item name="android:textColor">@color/rally_white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:headerDividersEnabled">true</item>
        <item name="android:typeface">sans</item>
        <!--<item name="android:background">@color/rally_bg_blur</item>-->
    </style>

    <style name="LibActionBarTheme" parent="Widget.AppCompat.Toolbar">
        <item name="android:textColorPrimary">@color/rally_white</item>
        <item name="colorControlNormal">@color/rally_white</item>
        <item name="colorControlHighlight">@color/rally_blue</item>
        <item name="android:gravity">center_vertical</item>
        <item name="actionButtonStyle">@style/Widget.AppCompat.ActionButton</item>
        <item name="selectableItemBackground">?android:attr/selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="LibPopupMenuStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/rally_bg_blur</item>
    </style>

