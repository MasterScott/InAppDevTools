<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="0dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            style="@style/content_margin"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/env_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/rally_bg_blur"
                android:text="Select API"
                android:drawableLeft="@drawable/ic_settings_white_24dp"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/screen_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/rally_bg_blur"
                android:text="Take Screen"
                android:drawableLeft="@drawable/ic_add_a_photo_rally_24dp"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/breakpoint_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/rally_bg_blur"
                android:text="Break Point"
                android:drawableLeft="@drawable/ic_pan_tool_white_24dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            style="@style/content_margin"
            android:layout_marginTop="0dp">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/sim_traffic_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/rally_bg_new"
                android:text="Simulate Traffic"
                android:drawableLeft="@drawable/ic_cloud_queue_white_24dp"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/anr_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/rally_bg_new"
                android:text="Simulate Anr"
                android:drawableLeft="@drawable/ic_block_white_24dp"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/crash_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/rally_bg_blur"
                android:text="Simulate Crash"
                android:drawableLeft="@drawable/ic_bug_report_rally_24dp"/>

        </LinearLayout>


        <TextView
            android:id="@+id/home_welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/content_margin"
            android:text="Android OS:"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            style="@style/content_margin"
            android:layout_marginTop="0dp">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/app_info_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/rally_bg_new"
                android:text="App Info"
                android:drawableLeft="@drawable/ic_info_white_24dp"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/dev_options_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/rally_bg_new"
                android:text="Dev Options"
                android:drawableLeft="@drawable/ic_developer_mode_white_24dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            style="@style/content_margin"
            android:layout_marginTop="0dp">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/close_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/rally_bg_new"
                android:text="Close app"
                android:drawableLeft="@drawable/ic_close_white_24dp"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/restart_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/rally_bg_new"
                android:text="Restart app"
                android:drawableLeft="@drawable/ic_replay_white_24dp"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>