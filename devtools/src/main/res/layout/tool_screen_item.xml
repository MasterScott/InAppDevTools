<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp"
        card_view:cardCornerRadius="@dimen/card_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/card_cover_height"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:scaleType="fitCenter" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignTop="@id/title"
                android:background="@color/rally_bg_blur_alpha"/>

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignBottom="@id/thumbnail"
                android:paddingBottom="@dimen/card_count_padding_bottom"
                android:paddingLeft="@dimen/card_title_padding"
                android:paddingRight="@dimen/card_title_padding"
                android:textSize="@dimen/card_subtitle" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_above="@id/subtitle"
                android:paddingLeft="@dimen/card_title_padding"
                android:paddingRight="@dimen/card_title_padding"
                android:paddingTop="@dimen/card_title_padding"
                android:textColor="@color/rally_white"
                android:textSize="@dimen/card_title" />

            <ImageView
                android:id="@+id/overflow"
                android:layout_width="@dimen/card_overflow_width"
                android:layout_height="@dimen/card_overflow_height"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/title"
                android:layout_marginTop="@dimen/card_overflow_margin_top"
                android:layout_marginBottom="@dimen/card_overflow_margin_top"
                android:scaleType="centerCrop"
                android:clickable="true"
                android:src="@drawable/ic_more_vert_rally_24dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>