<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/widget_full_shape"
        android:layout_margin="@dimen/overlay_dialog_margin"
        android:orientation="vertical"
        style="@style/elevated">

            <android.support.v7.widget.Toolbar
                android:id="@+id/main_toolbar"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/rally_bg_blur"
                android:theme="@style/LibActionBarTheme"
                app:popupTheme="@style/popupMenuStyle"
                android:contentInsetLeft="0dp"
                android:contentInsetStart="0dp"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp"
                android:contentInsetRight="0dp"
                android:contentInsetEnd="0dp"
                app:contentInsetRight="0dp"
                app:contentInsetEnd="0dp"
                style="@style/elevated" >
            </android.support.v7.widget.Toolbar>

            <android.support.v7.widget.Toolbar
                android:id="@+id/tool_toolbar"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/rally_bg_blur"
                android:theme="@style/LibActionBarTheme"
                app:popupTheme="@style/popupMenuStyle"
                app:collapseIcon="@drawable/ic_close_rally_24dp"
                style="@style/elevated" >
            </android.support.v7.widget.Toolbar>

            <LinearLayout
                android:id="@+id/full_container"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:id="@+id/tool_head_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </FrameLayout>

                <!--<View style="@style/horizontal_separator"
                    android:id="@+id/second_separator"/>-->

            </LinearLayout>


            <android.support.v4.widget.NestedScrollView
                android:id="@+id/scroll_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:id="@+id/tool_body_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                </FrameLayout>

            </android.support.v4.widget.NestedScrollView>

        </LinearLayout>

</FrameLayout>
