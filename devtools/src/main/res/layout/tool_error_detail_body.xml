<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/content_padding">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/detail_when"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:typeface="sans"
            android:textColor="@color/rally_white"
            android:textSize="14dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/detail_foreground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_when"
            android:fontFamily="sans-serif-condensed"
            android:typeface="sans"
            android:textColor="@color/rally_white"
            android:textSize="14dp" />
        <TextView
            android:id="@+id/detail_last_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_foreground"

            android:fontFamily="sans-serif-condensed"
            android:typeface="sans"
            android:textColor="@color/rally_white"
            android:textSize="14dp"/>

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:scaleType="fitCenter" />
    </RelativeLayout>

    <TextView
        android:id="@+id/detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/rally_orange"
        android:typeface="sans"
        android:fontFamily="sans-serif-condensed"
        android:textSize="17dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/detail_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/rally_white"
        android:typeface="sans"
        android:fontFamily="sans-serif-condensed"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/detail_thread"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:typeface="sans"
        android:textColor="@color/rally_white"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/detail_title2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/rally_orange"
        android:typeface="sans"
        android:fontFamily="sans-serif-condensed"
        android:textSize="17dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/detail_subtitle2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/rally_white"
        android:typeface="sans"
        android:fontFamily="sans-serif-condensed"
        android:textSize="15dp"/>

    <LinearLayout
        android:id="@+id/details_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <Button
            android:id="@+id/info_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:text="Info"
            android:backgroundTint="@color/rally_blue"
            android:textColor="@color/charcoal"/>

        <Button
            android:id="@+id/logcat_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:text="Logcat"
            android:backgroundTint="@color/rally_yellow"
            android:textColor="@color/charcoal"/>

        <Button
            android:id="@+id/screen_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:text="Screen"
            android:backgroundTint="@color/rally_green"
            android:textColor="@color/charcoal"/>

    </LinearLayout>

    <TextView
        android:id="@+id/out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:layout_gravity="start" />

    <HorizontalScrollView
        android:id="@+id/crash_horizontal_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black">

        <TextView
            android:id="@+id/detail_console"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/rally_white"
            android:layout_margin="3dp"
            android:typeface="monospace"
            android:fontFamily="serif-monospace"
            android:textSize="14dp"/>

    </HorizontalScrollView>
</LinearLayout>