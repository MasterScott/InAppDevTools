<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/content_padding">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/detail_when"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            style="@style/TextCondensedMedium" />

        <TextView
            android:id="@+id/detail_foreground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_when"
            style="@style/TextCondensedMedium" />
        <TextView
            android:id="@+id/detail_last_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_foreground"
            style="@style/TextCondensedMedium" />

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:scaleType="fitCenter" />
    </RelativeLayout>

    <TextView
        android:id="@+id/detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/rally_orange"
        android:layout_marginTop="10dp"
        style="@style/TextCondensedBig" />

    <TextView
        android:id="@+id/detail_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextCondensedMedium" />

    <TextView
        android:id="@+id/detail_thread"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextCondensedMedium" />

    <TextView
        android:id="@+id/detail_title2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/rally_orange"
        android:layout_marginTop="10dp"
        style="@style/TextCondensedBig" />

    <TextView
        android:id="@+id/detail_subtitle2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextCondensedMedium" />

    <LinearLayout
        android:id="@+id/details_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/stacktrace_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Stacktrace"
            android:backgroundTint="@color/black"
            android:textColor="@color/rally_white"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/logcat_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="LogCat"
            android:backgroundTint="@color/rally_yellow"
            android:textColor="@color/charcoal"/>

    </LinearLayout>

    <!--<TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Full stacktrace:"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="3dp"
        style="@style/TextCondensedBig" />-->

    <HorizontalScrollView
        android:id="@+id/stacktrace_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:visibility="gone">

        <TextView
            android:id="@+id/detail_console"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            style="@style/TextMonospace" />

    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/secondary_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/reveal_details_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Reveal report"
            android:backgroundTint="@color/rally_white"
            android:textColor="@color/rally_bg_solid"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="invisible"/>

    </LinearLayout>

    <TextView
        android:id="@+id/out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:layout_gravity="start"
        android:visibility="gone"/>

</LinearLayout>